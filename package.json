{
	"name": "@aeolun/workspaces",
	"version": "4.2.3",
	"description": "release-it plugin for bumping and publishing workspaces",
	"keywords": ["release", "release-it", "release-it-plugin", "plugin"],
	"repository": "https://github.com/release-it-plugins/workspaces",
	"license": "MIT",
	"author": "Robert Jackson <me@rwjblue.com>",
	"type": "module",
	"main": "index.js",
	"files": ["index.js"],
	"scripts": {
		"check": "biome check .",
		"check:fix": "biome check --write .",
		"test": "npm-run-all check test:vitest",
		"test:watch": "vitest --no-threads",
		"test:vitest": "vitest run --no-threads",
		"release": "release-it"
	},
	"lint-staged": {
		"*.js": "eslint"
	},
	"dependencies": {
		"detect-indent": "^6.1.0",
		"detect-newline": "^3.1.0",
		"semver": "^7.7.1",
		"url-join": "^4.0.1",
		"validate-peer-dependencies": "^1.2.0",
		"walk-sync": "^2.2.0",
		"yaml": "^2.7.1"
	},
	"devDependencies": {
		"@biomejs/biome": "^1.9.4",
		"@release-it/conventional-changelog": "^10.0.1",
		"broccoli-test-helper": "^2.0.0",
		"husky": "^4.3.8",
		"lint-staged": "^10.5.4",
		"lodash": "^4.17.21",
		"npm-run-all": "^4.1.5",
		"release-it": "^19.0.1",
		"tmp": "^0.1.0",
		"sinon": "^20.0.0",
		"vite": "^6.3.2",
		"vitest": "^0.33.0"
	},
	"peerDependencies": {
		"release-it": "^17.0.0 || ^18.0.0 || ^19.0.0"
	},
	"engines": {
		"node": ">= 16"
	},
	"volta": {
		"node": "16.20.1",
		"npm": "9.8.0"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	},
	"release-it": {
		"git": {
			"tagName": "v${version}"
		},
		"github": false
	}
}
