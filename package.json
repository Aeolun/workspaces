{
	"name": "@aeolun/workspaces",
	"version": "5.2.1",
	"description": "release-it plugin for bumping and publishing workspaces",
	"keywords": [
		"release",
		"release-it",
		"release-it-plugin",
		"plugin"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/aeolun/workspaces"
	},
	"license": "MIT",
	"authors": [
		"Aeolun <aeolun@gmail.com>",
		"Robert Jackson <me@rwjblue.com>"
	],
	"type": "module",
	"main": "index.js",
	"files": [
		"index.js"
	],
	"scripts": {
		"lint": "biome check .",
		"lint:fix": "biome check . --write",
		"format": "biome format . --write",
		"test": "npm-run-all lint test:vitest",
		"test:watch": "vitest --no-threads",
		"test:vitest": "vitest run --no-threads",
		"release": "release-it"
	},
	"husky": {
		"hooks": {
			"pre-commit": "lint-staged"
		}
	},
	"lint-staged": {
		"*.js": "biome check --write"
	},
	"dependencies": {
		"detect-indent": "^6.1.0",
		"detect-newline": "^3.1.0",
		"execa": "^8.0.1",
		"semver": "^7.7.2",
		"url-join": "^4.0.1",
		"validate-peer-dependencies": "^1.2.0",
		"walk-sync": "^2.2.0",
		"yaml": "^2.8.0"
	},
	"devDependencies": {
		"@biomejs/biome": "^2.2.4",
		"@release-it/conventional-changelog": "^10.0.1",
		"broccoli-test-helper": "^2.0.0",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^8.10.0",
		"eslint-plugin-node": "^11.1.0",
		"eslint-plugin-prettier": "^4.2.1",
		"husky": "^4.3.8",
		"lint-staged": "^10.5.4",
		"lodash": "^4.17.21",
		"npm-run-all": "^4.1.5",
		"prettier": "^2.8.8",
		"release-it": "^19.0.0",
		"sinon": "^9.2.4",
		"tmp": "^0.2.3",
		"vitest": "^0.34.6"
	},
	"peerDependencies": {
		"release-it": "^17.0.0 || ^18.0.0 || ^19.0.0"
	},
	"optionalDependencies": {
		"@release-it/conventional-changelog": "^10.0.0"
	},
	"engines": {
		"node": ">= 20"
	},
	"volta": {
		"node": "20.19.2",
		"npm": "9.8.0"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org/"
	}
}
